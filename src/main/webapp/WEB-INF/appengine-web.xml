<?xml version="1.0" encoding="utf-8"?>
<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">
    <application>${google.cloud.project}</application>
    <version>1</version>
    <threadsafe>true</threadsafe>

    <basic-scaling>
        <max-instances>2</max-instances>
    </basic-scaling>

    <system-properties>
        <property name="java.util.logging.config.file" value="WEB-INF/logging.properties"/>
    </system-properties>

    <env-variables>
        <env-var name="GOOGLE_CLOUD_PROJECT" value="${google.cloud.project}"/>
        <env-var name="APPLICATION_NAME" value="${application.name}"/>
    </env-variables>
</appengine-web-app>
